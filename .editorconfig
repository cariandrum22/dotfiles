# EditorConfig - https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Nix files
[*.nix]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Fish shell
[*.fish]
indent_size = 4

# Python
[*.py]
indent_size = 4

# Haskell
[*.hs]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_size = 4

# Emacs Lisp - uses its own indentation conventions
[*.el]
indent_style = unset
indent_size = unset

# macOS plist files use tabs
[*.plist]
indent_style = tab
indent_size = unset

# GPG encrypted files are binary
[*.gpg]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

# Lock files - don't modify
[*.lock]
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
